{
	"name": "@acdh-oeaw/prestatic",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "20.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.5.0",
	"scripts": {
		"build": "turbo run build",
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"ci:version": "changeset version && prettier \"**/CHANGELOG.md\" --write",
		"dev": "turbo run dev",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "turbo run lint:check",
		"lint:fix": "turbo run lint:fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"prepublishOnly": "run-s validate build",
		"setup": "is-ci || simple-git-hooks",
		"test": "turbo run test",
		"types:check": "turbo run types:check",
		"validate": "turbo run format:check lint:check types:check test"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^1.0.0",
		"@acdh-oeaw/prettier-config": "catalog:",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.7",
		"@commitlint/cli": "^18.6.1",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.7",
		"npm-run-all2": "^6.2.2",
		"prettier": "catalog:",
		"simple-git-hooks": "^2.11.1",
		"turbo": "^2.0.6",
		"typescript": "catalog:"
	},
	"pnpm": {
		"overrides": {
			"@commitlint/config-conventional": "$@commitlint/cli"
		},
		"updateConfig": {
			"ignoreDependencies": [
				"@commitlint/cli",
				"eslint"
			]
		}
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
