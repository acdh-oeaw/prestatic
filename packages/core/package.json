{
	"name": "@acdh-oeaw/prestatic-core",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "20.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.5.0",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"format:check": "prettier . --cache --cache-location ../../.prettiercache --check --ignore-path ../../.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache --ignore-path ../../.gitignore",
		"lint:fix": "pnpm run lint:check --fix",
		"test": "vitest run",
		"test:update-snapshots": "vitest run --update",
		"test:watch": "vitest watch",
		"types:check": "tsc --noEmit"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "catalog:",
		"remove": "^0.1.5",
		"serialize-javascript": "^6.0.2"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "catalog:",
		"@acdh-oeaw/prettier-config": "catalog:",
		"@acdh-oeaw/tsconfig": "catalog:",
		"@keystatic/core": "catalog:",
		"@mdx-js/mdx": "^3.0.1",
		"@types/node": "catalog:",
		"@types/serialize-javascript": "^5.0.4",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"tsup": "^8.1.0",
		"tsx": "^4.16.2",
		"type-fest": "^4.21.0",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict"
		]
	},
	"lint-staged": {
		"*.@(ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ../../.prettiercache --write"
		],
		"*.!(ts|tsx)": "prettier --cache --cache-location ../../.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config"
}
